#!/bin/bash

WORKSPACE=$(pwd)
COMMIT_TIME=$(date +"%m-%d-%Y-%H:%M")

COMMIT_MSG=$1
if [ -z "$COMMIT_MSG" ]; then
	COMMIT_MSG="Updated-$COMMIT_TIME"
fi

is_git=0

function exit_process()
{
    echo "Exiting ..."
    clean_old_logs
    rm_proff_temp
}

if [ -f _scripts/bash_func ]; then
	. _scripts/bash_func
else
	echo "Error on _scripts/bash_func ..."
fi


### MAIN ###
check_git
link_draft

clean_old_logs

